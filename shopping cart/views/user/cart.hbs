<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Quatity</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>

                {{#each product}}

                <tr>
                    
                    <td><img style="height: 70px;width: 70px;" src="/product-image/{{this.products._id}}.jpg" alt=""></td>
                    <td>{{this.products.Name}}</td>
                    
                    <td>
                        <button class="cart-item-count mx-2" onclick="changeQuantity('{{this._id}}','{{this.products._id}}',-1)">-</button>{{this.quantity}}<button class="cart-item-count ms-2" onclick="changeQuantity('{{this._id}}','{{this.products._id}}',1)">+</button>
                    </td>
                    <td>
                        <a href="" class="btn btn-danger">Remove</a>
                    </td>
                </tr>

                {{/each}}

            </tbody>
        </table>
    </div>
</section>


<script>
    function changeQuantity(cartId,proId,count){
        $.ajax({
            url:'/change-product-quantity',
            data:{
                cart:cartId,
                products:proId,
                count:count
            },
            method:"post",
            success:(response)=>{
                alert(response)
            }
        })
    }
</script>